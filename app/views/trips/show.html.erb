
<div style="background-color: #F3F5FF;">
  <div class="container container-dashboard">

    <div class="dashboard-box dashboard-info">
      <div class="d-flex flex-column flex-grow-1 dates-infos" style="width: 50%, height: 100%">
        <p><%= "#{@trip.start_date.day}/#{@trip.start_date.month}/#{@trip.start_date.year}"%></p>
        <p><%= "#{@trip.end_date.day}/#{@trip.end_date.month}/#{@trip.end_date.year}"%></p>
      </div>
      <div class="title-infos">
        <h1><%= @trip.title %></h1>
      </div>
      <div class="description-infos">
        <%= @trip.description %>
      </div>
      <div class="img-infos">
        <%= image_tag "Germany.png", class:"img-img-infos" %>
      </div>
    </div>
    <div class="dashboard-box dashboard-accomodation">
      <p>Accomodations</p>
      <%= render 'trip_details/accomodations' %>
    </div>
    <div class="dashboard-box dashboard-transportation">
      <p>Transports</p>
      <%= render 'trip_details/transportations' %>
    </div>
    <div class="dashboard-box dashboard-people">
      <p>Friends<%= render 'trip_details/participant' %></p>
    </div>
    <div class="dashboard-box dashboard-expenses">
      <p>Expenses</p>
      <div class="d-flex">
        <%= render 'trip_details/expenses' %>
        <div class="pie-chart flex-grow-1" style="margin-top: -50px;">
          <%= pie_chart [["Individual", @non_mutual_expenses], ["Mutual", (@sum_of_mutual_expenses / @participants_expenses.count)]],height: "200px", width: "100%", round: 0, colors: ["#3A405A", "#6A74A0"], legend: "bottom" %>
        </div>
      </div>
    </div>
    <div class="dashboard-box dashboard-activities">
      <p>Activities</p>
      <%= render 'trip_details/events' %>
    </div>
    <div class="dashboard-box dashboard-photos">
      <%= render 'trip_details/photos' %>
    </div>
    <div class="dashboard-box dashboard-chat">
      <%= render 'trip_details/messages' %>
    </div>
  </div>
</div>


