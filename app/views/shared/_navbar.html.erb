<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to root_path do%>
      <%= image_tag "Logo.png", style: "height: 50px;" %>
    <% end %>

      <div class="d-flex">
        <% if user_signed_in? %>
          <%= link_to "My trips", trips_path, class: "btn", id: "my-trips-btn" %>
        <% end %>
        <div>
          <% unless user_signed_in? %>
            <%= image_tag "https://res.cloudinary.com/dyqby7tbh/image/upload/v1646667807/placeholder_user_f6tjii.png", class:"avatar", id:"navbarDarkDropdown",
