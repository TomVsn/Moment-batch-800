<div class="container chatroom" data-controller="trip-subscription"
  data-trip-subscription-trip-id-value="<%= @trip.id %>">
  <h1 style="font-size:20px"><%= @trip.title %></h1>

  <div class="messages" data-trip-subscription-target="messages">
    <% @messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.participant.user.username %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
</div>

<%= simple_form_for [@participant, @new_message], remote: true, html: {class: "d-flex"} do |f| %>
  <%= f.input :content, label: false, placeholder: "Message", wrapper_html: {class: "flex-grow-1"}%>
  <%= f.submit "Send", class: "btn btn-primary" %>
<% end %>
